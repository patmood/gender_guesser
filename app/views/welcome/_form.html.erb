<div class="well">

  <%= form_tag("/guess", method: "get", class: "form-horizontal") do %>
    <div class="form-group">
      <%= label_tag(:height, "Height (cms):") %>
      <%= text_field_tag(:height) %>
    </div>
    <div class="form-group">
      <%= label_tag(:weight, "Weight (kgs):") %>
      <%= text_field_tag(:weight) %>
    </div>
    <div class="form-group">
      <%= submit_tag("Guess!") %>
    </div>
  <% end %>

</div>
